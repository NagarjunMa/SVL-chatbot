# SVL Chatbot - Environment Variables
# Copy this file to .env and fill in your actual values

# === REQUIRED AWS CREDENTIALS ===
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_REGION=us-east-1

# === BEDROCK CONFIGURATION ===
# Model ID for AWS Bedrock - choose one of:
# - amazon.nova-pro-v1:0 (recommended)
# - anthropic.claude-3-5-sonnet-20241022-v2:0
# - anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_MODEL_ID=amazon.nova-pro-v1:0

# === KNOWLEDGE BASE (Optional - will be created during setup) ===
KNOWLEDGE_BASE_ID=
KNOWLEDGE_BASE_S3_BUCKET=

# === DATABASE CONFIGURATION ===
DYNAMODB_TABLE_PREFIX=svl
# Leave empty for AWS DynamoDB, set for local development
DYNAMODB_ENDPOINT_URL=

# === LAMBDA BACKEND (Optional) ===
USE_LAMBDA_BACKEND=false
API_GATEWAY_URL=
LAMBDA_STAGE=dev

# === SECURITY ===
JWT_SECRET_KEY=your_jwt_secret_here_generate_random_64_chars
ENCRYPTION_KEY=your_encryption_key_here

# === LOGGING ===
LOG_LEVEL=INFO
ENVIRONMENT=development

# === OPTIONAL FEATURES ===
# Data retention in days
DATA_RETENTION_DAYS=90
# Enable audit logging
AUDIT_LOGGING_ENABLED=true
